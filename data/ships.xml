-->

<!--
 Ships are added below inside the ``ships'' tag.
-->

<ships>

<!-- The main player ship -->
  <ship name="dart">
    <speed val="2" />
    <frameDelay val="200" />
    <points val="100" />
    <hp val="5" />
    <frames num="1">
      <center image="dart_center.png" />
      <left image="dart_left.png" />
      <right image="dart_right.png" />
    </frames>
  </ship>

